        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/setting_item" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:id="@id/setting_btn" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/setting_selector" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@android:color/darker_gray" android:gravity="center" android:id="@id/setting_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_item" android:layout_weight="0.0" />
        </LinearLayout>
    </LinearLayout>
