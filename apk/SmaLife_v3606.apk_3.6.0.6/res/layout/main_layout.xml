            <TextView android:textSize="12.0sp" android:textColor="@android:color/darker_gray" android:gravity="center" android:id="@id/notic_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notic_item" android:layout_weight="0.0" />
