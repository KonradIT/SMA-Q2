        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/sleep_item" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:id="@id/sleep_btn" android:background="@null" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/sleep_selector" android:layout_weight="1.0" />
            <TextView android:textSize="12.0sp" android:textColor="@android:color/darker_gray" android:gravity="center" android:id="@id/sleep_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_item" android:layout_weight="0.0" />
